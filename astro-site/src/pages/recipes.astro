---
import { getCollection } from 'astro:content';

const recipes = await getCollection('recipes');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Recipes</title>
	</head>
	<body>
		<h1>Recipes</h1>
		<ul>
			{recipes.map(recipe => (
				<li>
					<h2><a href={`/recipes/${recipe.id}`}>{recipe.data.title}</a></h2>
					<div>{recipe.body}</div>
				</li>
			))}
		</ul>
	</body>
</html>
