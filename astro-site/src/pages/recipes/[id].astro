---
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const recipes = await getCollection('recipes');
  return recipes.map(recipe => ({
    params: { id: recipe.id },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{recipe.data.title}</title>
	</head>
	<body>
		<h1>{recipe.data.title}</h1>

		{recipe.data.heroImage && (
			<img src={recipe.data.heroImage} alt={recipe.data.title} style="max-width: 400px;" />
		)}

		<p><strong>Serves:</strong> {recipe.data.basePortions} people</p>
		<p><strong>Estimated time:</strong> {recipe.data.estimatedTime} minutes</p>
		{recipe.data.rating && <p><strong>Rating:</strong> {recipe.data.rating} stars</p>}

		<h2>Description</h2>
		<p>{recipe.data.description}</p>

		{recipe.data.ingredients && recipe.data.ingredients.length > 0 && (
			<>
				<h2>Ingredients</h2>
				<ul>
					{recipe.data.ingredients.map(ingredient => (
						<li>{ingredient.amount} {ingredient.unit} {ingredient.name}</li>
					))}
				</ul>
			</>
		)}

		{recipe.data.ingredientGroups && recipe.data.ingredientGroups.length > 0 && (
			<>
				{recipe.data.ingredientGroups.map(group => (
					<div>
						<h3>{group.groupName}</h3>
						<ul>
							{group.ingredients.map(ingredient => (
								<li>{ingredient.amount} {ingredient.unit} {ingredient.name}</li>
							))}
						</ul>
					</div>
				))}
			</>
		)}

		{recipe.data.steps && recipe.data.steps.length > 0 && (
			<>
				<h2>Steps</h2>
				{recipe.data.steps.map((step, index) => (
					<div style="margin-bottom: 1rem;">
						<h3>{index + 1}. {step.title}</h3>
						<div set:html={step.description}></div>
					</div>
				))}
			</>
		)}

		{recipe.data.stepGroups && recipe.data.stepGroups.length > 0 && (
			<>
				{recipe.data.stepGroups.map(group => (
					<div>
						<h3>{group.groupName}</h3>
						{group.steps.map((step, index) => (
							<div style="margin-bottom: 1rem;">
								<h4>{index + 1}. {step.title}</h4>
								<div set:html={step.description}></div>
							</div>
						))}
					</div>
				))}
			</>
		)}

		<h2>Dietary Information</h2>
		<ul>
			<li>Vegetarian: {recipe.data.dietaryInfo.vegetarian ? 'Yes' : 'No'}</li>
			<li>Vegan: {recipe.data.dietaryInfo.vegan ? 'Yes' : 'No'}</li>
			<li>Gluten Free: {recipe.data.dietaryInfo.glutenFree ? 'Yes' : 'No'}</li>
			<li>Dairy Free: {recipe.data.dietaryInfo.dairyFree ? 'Yes' : 'No'}</li>
			<li>Nut Free: {recipe.data.dietaryInfo.nutFree ? 'Yes' : 'No'}</li>
			<li>Low Carb: {recipe.data.dietaryInfo.lowCarb ? 'Yes' : 'No'}</li>
		</ul>

		<p><a href="/">‚Üê Back to recipes</a></p>
	</body>
</html>
